<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    
    <!-- 加载压缩过的css和css5支持验证的js -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div>
        <div class="container">
            <div class="page-header">
                <h1>.Net MVC学习</h1>
            </div>
            <div class="col-xs-3">
                <ul>
                    <li>@Html.ActionLink("表单-数据绑定、提交验证....", "Index", "User")</li>
                </ul>
            </div>

            <!-- RenderBody()是占位符，用于加载子页面 -->
            <div class="col-xs-9">
                @RenderBody()
            </div>

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - MVC Learn</p>
            </footer>
        </div>
    </div>

    <!-- 加载相关js和css -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- 这里是一个点位符，用于加载子页面的需要加载的东西, required表示这个占位在子页面是否是必须指定的 -->
    <!-- 子页面中指定的方式就是@section scripts{//这里面可以引用当前子页面需要的css及js等} //子页面的scripts名字的要模版页的名字一样 -->
    @RenderSection("scripts", required: false)
</body>
</html>
